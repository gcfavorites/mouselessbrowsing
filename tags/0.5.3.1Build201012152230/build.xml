	       remotedir="www/joomla/resources"
	       userid="ftp1067403-rudolfnoe"
	       password="bikefahrn"
	       depends="yes">
			<fileset dir="${dist_dir}">
				<include name="*.xpi"/>
			</fileset>
		</ftp>
	</target>
	<target name="googleUpload">
		<gcupload username="Rudolf.Noe" password="KQ3pG9uu6cS7" projectname="mouselessbrowsing" filename="${dist_dir}/${version_file_name}" 
			targetfilename="${version_file_name}" 
			summary="Version ${version}" 
			labels="Type-Installer, OpSys-All" />
	</target>
</project>
